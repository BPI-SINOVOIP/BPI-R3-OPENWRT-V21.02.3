Config:
if PACKAGE_libssh2

choice
	prompt "Choose crypto backend"
	default LIBSSH2_OPENSSL

	config LIBSSH2_OPENSSL
	bool "openssl"

	config LIBSSH2_MBEDTLS
	bool "mbedtls"
endchoice

